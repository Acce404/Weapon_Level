function OnEvent(event, arg)
	if (event == "MOUSE_BUTTON_RELEASED" and arg == 9) then

		if (not IsKeyLockOn("capslock")) then
			PressKey("capslock")
			Sleep(5)
			ReleaseKey("capslock")

		end
	--InvestigationHeavyWeaponXP()
  --InvestigationKineticWeaponXP()
  InvestigationEnergyWeaponXP()
	end
end

