function run(t)
	PressKey("w")
	Sleep(10)
	PressKey("lshift")
	Sleep(t)
	ReleaseKey("w")
	ReleaseKey("lshift")
end

function gjallarhornshot()
	PressMouseButton(3)
	Sleep(500)
	scan8()
	PressMouseButton(1)
	Sleep(20)
	ReleaseMouseButton(3)
	ReleaseMouseButton(1)
end

